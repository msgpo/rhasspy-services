#!/usr/bin/env bash
set -e

# Check for help
for arg in "$@";
do
    if [[ "${arg}" == '--help' ]]; then
        phonetisaurus-apply --help
        exit 0
    fi
done

# -----------------------------------------------------------------------------

temp_list="$(mktemp)"
function finish {
    rm -f "${temp_list}"
}

trap finish EXIT

# -----------------------------------------------------------------------------

cat > "${temp_list}"
phonetisaurus-apply --word_list "${temp_list}" "$@" | \
    python3 -m training.vocab_g2p
